{
  "info": {
    "_postman_id": "9b3a9b44-7b6a-4b61-9c7a-4a4c2cb9f7c1",
    "name": "Skreenit API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Skreenit backend endpoints (Auth, Applicant, Recruiter). Use together with the Skreenit environments."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"candidate@example.com\",\n  \"password\": \"Passw0rd!\",\n  \"role\": \"candidate\",\n  \"full_name\": \"Test Candidate\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"candidate@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            },
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] }
          }
        },
        {
          "name": "Validate Session",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/auth/validate", "host": ["{{base_url}}"], "path": ["auth","validate"] }
          }
        },
        {
          "name": "Password Changed Email",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"candidate@example.com\"\n}" },
            "url": { "raw": "{{base_url}}/auth/password-changed", "host": ["{{base_url}}"], "path": ["auth","password-changed"] }
          }
        }
      ]
    },
    {
      "name": "Applicant",
      "item": [
        {
          "name": "Save Detailed Form",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidate_id\": \"{{candidate_id}}\",\n  \"profile\": {\n    \"id\": \"{{candidate_id}}\",\n    \"email\": \"candidate@example.com\"\n  },\n  \"education\": [],\n  \"experience\": [],\n  \"skills\": []\n}"
            },
            "url": { "raw": "{{base_url}}/applicant/detailed-form", "host": ["{{base_url}}"], "path": ["applicant","detailed-form"] }
          }
        },
        {
          "name": "Get Detailed Form",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": {
              "raw": "{{base_url}}/applicant/detailed-form/{{candidate_id}}",
              "host": ["{{base_url}}"],
              "path": ["applicant","detailed-form","{{candidate_id}}"]
            }
          }
        },
        {
          "name": "Upload General Video",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "candidate_id", "value": "{{candidate_id}}", "type": "text" },
                { "key": "video", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{base_url}}/applicant/general-video", "host": ["{{base_url}}"], "path": ["applicant","general-video"] }
          }
        },
        {
          "name": "Get General Video",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/applicant/general-video/{{candidate_id}}", "host": ["{{base_url}}"], "path": ["applicant","general-video","{{candidate_id}}"] }
          }
        },
        {
          "name": "Upload Resume",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "multipart/form-data" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "applicant_id", "value": "{{candidate_id}}", "type": "text" },
                { "key": "resume", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{base_url}}/applicant/upload-resume", "host": ["{{base_url}}"], "path": ["applicant","upload-resume"] }
          }
        },
        {
          "name": "Get Resume Signed URL",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/applicant/resume-url/{{candidate_id}}", "host": ["{{base_url}}"], "path": ["applicant","resume-url","{{candidate_id}}"] }
          }
        },
        {
          "name": "Add Candidate Education (single row)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidate_id\": \"{{candidate_id}}\",\n  \"institution\": \"University\",\n  \"degree\": \"BSc\"\n}"
            },
            "url": { "raw": "{{base_url}}/applicant/profile/{{candidate_id}}/education", "host": ["{{base_url}}"], "path": ["applicant","profile","{{candidate_id}}","education"] }
          }
        },
        {
          "name": "List Candidate Education",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/applicant/profile/{{candidate_id}}/education", "host": ["{{base_url}}"], "path": ["applicant","profile","{{candidate_id}}","education"] }
          }
        }
      ]
    },
    {
      "name": "Recruiter",
      "item": [
        {
          "name": "Upsert Recruiter Profile",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{recruiter_id}}\",\n  \"company_name\": \"Acme Inc\",\n  \"contact_name\": \"John Doe\",\n  \"contact_email\": \"john@example.com\"\n}"
            },
            "url": { "raw": "{{base_url}}/recruiter/profile", "host": ["{{base_url}}"], "path": ["recruiter","profile"] }
          }
        },
        {
          "name": "Get Recruiter Profile",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/profile/{{recruiter_id}}", "host": ["{{base_url}}"], "path": ["recruiter","profile","{{recruiter_id}}"] }
          }
        },
        {
          "name": "Post Job",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Frontend Developer\",\n  \"description\": \"Build UIs\",\n  \"requirements\": \"JS, React\",\n  \"location\": \"Remote\",\n  \"job_type\": \"Full-time\",\n  \"company_id\": \"{{company_id}}\",\n  \"created_by\": \"{{recruiter_id}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/recruiter/post-job", "host": ["{{base_url}}"], "path": ["recruiter","post-job"] }
          }
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/job/{{job_id}}", "host": ["{{base_url}}"], "path": ["recruiter","job","{{job_id}}"] }
          }
        },
        {
          "name": "List Companies",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/companies", "host": ["{{base_url}}"], "path": ["recruiter","companies"] }
          }
        },
        {
          "name": "Approve Application",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/application/{{application_id}}/approve", "host": ["{{base_url}}"], "path": ["recruiter","application","{{application_id}}","approve"] }
          }
        },
        {
          "name": "Get Application Resume URL (signed)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/application/{{application_id}}/resume-url", "host": ["{{base_url}}"], "path": ["recruiter","application","{{application_id}}","resume-url"] }
          }
        },
        {
          "name": "Create/Replace Job Questions",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\n  { \"question_text\": \"Why should we hire you?\", \"question_order\": 1, \"time_limit\": 120 },\n  { \"question_text\": \"Describe a challenge you solved.\", \"question_order\": 2, \"time_limit\": 120 }\n]"
            },
            "url": { "raw": "{{base_url}}/recruiter/job/{{job_id}}/questions", "host": ["{{base_url}}"], "path": ["recruiter","job","{{job_id}}","questions"] }
          }
        },
        {
          "name": "List Job Questions",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{auth_token}}" } ],
            "url": { "raw": "{{base_url}}/recruiter/job/{{job_id}}/questions", "host": ["{{base_url}}"], "path": ["recruiter","job","{{job_id}}","questions"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "https://skreenit-api.onrender.com" },
    { "key": "auth_token", "value": "" },
    { "key": "candidate_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "recruiter_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "company_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "job_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "application_id", "value": "00000000-0000-0000-0000-000000000000" }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const token = pm.collectionVariables.get('auth_token') || pm.variables.get('auth_token');",
          "if (token) {",
          "  const hasAuth = pm.request.headers.has('Authorization');",
          "  if (!hasAuth) {",
          "    pm.request.headers.add({ key: 'Authorization', value: `Bearer ${token}` });",
          "  }",
          "}"
        ]
      }
    }
  ]
}
